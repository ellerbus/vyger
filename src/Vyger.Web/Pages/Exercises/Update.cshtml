@page "{id}"
@model Vyger.Web.Pages.Exercises.UpdateModel
@{
  ViewData["Title"] = "Update Exercise";
}

<form method="post" class="col-lg-6 col-md-6 mx-auto">
  <div asp-validation-summary="All"></div>

  <input type="hidden" asp-for="Exercise.Id" />
  <input type="hidden" asp-for="Exercise.Group" />
  <input type="hidden" asp-for="Exercise.Category" />

  <div class="form-group mb-1">
    <div class="form-control">
      @Model.Exercise.Group
    </div>
  </div>

  <div class="form-group mb-1">
    <div class="form-control">
      @Model.Exercise.Category
    </div>
  </div>

  <div class="form-group">
    <input class="form-control" asp-for="Exercise.Name" />
    <span class="form-text text-danger" asp-validation-for="Exercise.Name"></span>
  </div>

  <div class="form-group text-right">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-outline-secondary" asp-page="/Exercises/Index">Cancel</a>
  </div>
</form>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
      <li class="breadcrumb-item"><a asp-page="/Exercises/Index">Exercises</a></li>
      <li class="breadcrumb-item">
        @Model.Exercise.Name
      </li>
    </ol>
  </nav>
}