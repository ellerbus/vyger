@page "{id}"
@model Vyger.Web.Pages.Routines.UpdateModel
@{
  ViewData["Title"] = "Update Routine";
}

<form method="post" class="col-lg-6 col-md-6 mx-auto">
  <div asp-validation-summary="All"></div>

  <input type="hidden" asp-for="Routine.Id" />

  <div class="form-group mb-1">
    <label asp-for="Routine.Name"></label>
    <input class="form-control" asp-for="Routine.Name" />
    <span class="form-text text-danger" asp-validation-for="Routine.Name"></span>
  </div>

  <div class="form-group mb-1">
    <select class="form-control" asp-for="Routine.Weeks" asp-items="@Model.WeekSelectList"></select>
    <span class="form-text text-danger" asp-validation-for="Routine.Weeks"></span>
  </div>

  <div class="form-group">
    <select class="form-control" asp-for="Routine.Days" asp-items="@Model.DaySelectList"></select>
    <span class="form-text text-danger" asp-validation-for="Routine.Days"></span>
  </div>

  <div class="form-group">
    <label asp-for="Routine.WorkoutPattern"></label>
    <input class="form-control workout-sets" asp-for="Routine.WorkoutPattern" />
    <span class="form-text text-danger" asp-validation-for="Routine.WorkoutPattern"></span>
  </div>

  <div class="form-group text-right mt-3">
    <a class="btn btn-outline-secondary float-left"
       asp-page="/Routines/Index">
      Cancel
    </a>
    <a class="btn btn-outline-secondary"
       asp-page="/Routines/Exercises/Index"
       asp-route-id="@Model.Routine.Id">
      Exercises
    </a>
    <button class="btn btn-primary">
      Next
      <span class="fa fa-fw fa-caret-right"></span>
    </button>
  </div>
</form>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
      <li class="breadcrumb-item"><a asp-page="/Routines/Index">Routines</a></li>
      <li class="breadcrumb-item active">
        @Model.Routine.Name
      </li>
    </ol>
  </nav>
}

@section Scripts {
  <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.2/knockout-min.js"></script>

  <script type="text/javascript">
    function WorkoutSetsViewModel()
    {
      var self = this;

      self.sets = ko.observableArray(@Json.Serialize(Model.Routine.Sets));

      self.addSet = function (set)
      {
        var idx = self.sets.indexOf(set);

        self.sets.splice(idx+1, 0, '');
      }

      self.removeSet = function (set)
      {
        self.sets.remove(set);

        if (self.sets().length == 0)
        {
          self.addSet();
        }
      }
    }

    ko.applyBindings(new WorkoutSetsViewModel());
  </script>
}