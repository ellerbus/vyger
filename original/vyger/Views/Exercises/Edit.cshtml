@{
  ViewBag.Title = "Edit Exercise";
}

@model Exercise

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()

      <div class="form-group">
        @Html.HiddenFor(m => m.Group)
        @Html.TextBoxFor(m => m.Group, new { @class = "form-control", disabled = "disabled" })
      </div>
      <div class="form-group">
        @Html.HiddenFor(m => m.Category)
        @Html.TextBoxFor(m => m.Category, new { @class = "form-control", disabled = "disabled" })
      </div>
      <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "exercise name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "exercise id", disabled = "disabled" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">update</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="@Url.Content("~/")">Home</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index")">Exercises</a></li>
      <li class="breadcrumb-item active">Edit : @Model.Name</li>
    </ol>
  </nav>
}
