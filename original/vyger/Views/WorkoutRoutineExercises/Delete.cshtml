@{
  ViewBag.Title = "Delete Routine Exercise";
}

@model WorkoutRoutineExerciseDeleteViewModel

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      <div class="form-group">
        @Html.TextBoxFor(m => m.RoutineExercise.Exercise.DetailName, new { @class = "form-control", disabled = "disabled" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-danger">delete</button>
        <a href="@Url.Action("Index", new { id = Model.Routine.Id, week = 1 })" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="@Url.Content("~/")">Home</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkoutRoutines")">Routines</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Edit", "WorkoutRoutines", new { id=Model.Routine.Id })">@Model.Routine.Name</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", new { id=Model.Routine.Id, week=1 })">Exercises</a></li>
      <li class="breadcrumb-item active">
        Delete Exercise
      </li>
    </ol>
  </nav>
}
