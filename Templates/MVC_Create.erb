<%- . ($config.Templates + "/_Utilities.ps1") -%>
<%- $config.OutFile = "Views/$class_names/Create.cshtml" -%>
@{
  ViewBag.Title = "Create <%= $class_name | Label %>";
}

@model <%= $class_name %>

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    <h1 class="bc-form-title">@ViewBag.Title</h1>
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()
      @Html.Partial("_Details", Model)
      <div class="form-group">
        <button type="submit" class="btn btn-primary">create</button>
        <a href="@Url.Action("Index", "<%= $class_names %>")" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>
