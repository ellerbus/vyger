@{
  ViewBag.Title = "Add Workout Log";
}

@model WorkoutLogCreateViewModel

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary();

      <div class="form-group">
        @Html.DropDownList("GroupId", Model.Groups.ToSelectList(Model.Exercise), "(exercise group)", new { @class = "form-control" })
      </div>
      <div class="form-group">
        @Html.DropDownList("CategoryId", Model.Categories.ToSelectList(Model.Exercise), "(exercise category)", new { @class = "form-control" })
      </div>
      <div class="form-group">
        @Html.DropDownListFor(m => m.ExerciseId, Model.Exercises.ToSelectList(), "(exercise)", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ExerciseId, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        @Html.TextBoxFor(m => m.Workout, new { @class = "form-control workout-pattern", placeholder = "workout routine" })
        @Html.ValidationMessageFor(m => m.Workout, "", new { @class = "form-text text-danger" })
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">log it</button>
        <a href="@Url.Action("Details", new { date = Model.LogDate.ToYMD() })" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Scripts{
  <script type="text/javascript">
    $(function ()
    {
      var $groupId = $('select[name=GroupId]');
      var $categoryId = $('select[name=CategoryId]');
      var $exerciseId = $('select[name=ExerciseId]');

      $groupId.change(function ()
      {
        loadExercises();
      });

      $categoryId.change(function ()
      {
        loadExercises();
      });

      loadExercises();

      function loadExercises()
      {
        var groupId = $groupId.val();
        var categoryId = $categoryId.val();

        var url = '@Url.Action("Query", "Exercises")' +
          '?groupId=' + groupId +
          '&categoryId=' + categoryId;

        if (groupId != '' && categoryId != '')
        {
          $.ajax({
            type: 'GET',
            url: url,
            dataType: 'json',
            success: function (exercises)
            {
              $exerciseId.find('option').remove();

              $.each(exercises, function (i, exercise)
              {
                var $option = $('<option/>').attr('value', exercise.Id).text(exercise.Name);

                $option.appendTo($exerciseId);
              });
            }
          });
        }
      }
    });
  </script>
}
