@{
  /**/

  ViewBag.Title = "Create Cycle";
}

@model WorkoutPlan

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()
      <div class="form-group">
        @Html.TextBoxFor(m => m.Routine.Name, new { @class = "form-control", disabled = "disabled" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">create workout cycle</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="@Url.Content("~/")">Home</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkoutRoutines")">Routines</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Edit", "WorkoutRoutines", new { id=Model.Routine.Id })">@Model.Routine.Name</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkoutPlans", new { id=Model.Routine.Id })">Plans</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", new { id=Model.Routine.Id, plan=Model.Id })">Plan # @Model.Id Cycles</a></li>
      <li class="breadcrumb-item active">
        Create Cycle # @(Model.CurrentCycleId + 1)
      </li>
    </ol>
  </nav>
}

