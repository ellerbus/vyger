@{
  ViewBag.Title = "Edit Exercise Group";
}

@model ExerciseGroup

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()

      <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "group name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "group id", disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">edit</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>
