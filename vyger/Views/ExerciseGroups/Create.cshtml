@{
  ViewBag.Title = "Create Exercise Group";
}

@model ExerciseGroup

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()
      @Html.Partial("_Details", Model)
      <div class="form-group">
        @Html.LabelFor(m => m.Id, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "group id" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">create</button>
        <a href="@Url.Action(MVC.ExerciseGroups.Index())" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Scripts {
  <script type="text/javascript">
    $(function ()
    {
      $('input[name$=Name]').change(function ()
      {
        var name = $(this).val();

        if (name != null && name.length > 0)
        {
          var id = name.toUpperCase().substr(0, 2);

          $('input[name$=Id]').val(id);
        }
      });
    });
  </script>
}
