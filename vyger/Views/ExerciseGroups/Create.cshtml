@{
  ViewBag.Title = "Create Exercise Group";
}

@model ExerciseGroup

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()

      <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "group name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "group id" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">create</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

@section Breadcrumbs{
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="@Url.Content("~/")">Home</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index")">Groups</a></li>
      <li class="breadcrumb-item active">Create Group</li>
    </ol>
  </nav>
}

@section Scripts {
  <script type="text/javascript">
    $(function ()
    {
      var $id = $('input[name=Id]');
      var $name = $('input[name=Name]');
      var $submit = $('button[type=submit]');

      $name.change(function ()
      {
        var name = $(this).val();

        if (name != null && name.length > 0)
        {
          var id = name.toUpperCase().substr(0, 2);

          $id.val(id);
        }
      });
    });
  </script>
}
