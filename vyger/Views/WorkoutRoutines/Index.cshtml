@{
  ViewBag.Title = "Routines";
}

@model IList<WorkoutRoutine>

<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-10">
    <table class="table">
      <thead>
        <tr>
          <th colspan="3">
            <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-success float-right">
              <i class="fa fa-fw fa-plus"></i> Create
            </a>
            Routine
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var routine in Model.OrderBy(x => x.Name))
        {
          <tr>
            <td>
              <a href="@Url.Action("Edit", new { id = routine.Id })" style="display: block;">
                @routine.Name
              </a>
            </td>
            <td class="text-right">
              <a href="@Url.Action("Index", "WorkoutRoutineExercises" , new { id=routine.Id, week=1 })">
                exercises
              </a>
            </td>
            <td class="text-right">
              <a href="@Url.Action("Index", "WorkoutPlans", new { id = routine.Id })">
                plans
              </a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
