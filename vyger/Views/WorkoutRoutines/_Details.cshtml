@model WorkoutRoutineForm

<div class="form-group">
  @Html.HiddenFor(m => m.Id)
  @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "routine name" })
  @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-danger" })
</div>
<div class="form-group">
  @Html.DropDownListFor(m => m.Weeks, Model.GetWeekSelectListItems(), "(weeks per cycle)", new { @class = "form-control" })
  @Html.ValidationMessageFor(m => m.Weeks, "", new { @class = "form-text text-danger" })
</div>
<div class="form-group">
  @Html.DropDownListFor(m => m.Days, Model.GetDaySelectListItems(), "(days per week)", new { @class = "form-control" })
  @Html.ValidationMessageFor(m => m.Days, "", new { @class = "form-text text-danger" })
</div>

