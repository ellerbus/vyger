@{
  ViewBag.Title = "Delete Routine Exercise";
}

@model WorkoutRoutineExerciseForm

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      <div class="form-group">
        @Html.TextBoxFor(m => m.RoutineExercise.Exercise.Name, new { @class = "form-control", disabled = "disabled" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-danger">delete</button>
        <a href="@Url.Action(MVC.WorkoutRoutineExercises.Index(Model.Routine.Id, 1))" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>
