@{
  ViewBag.Title = "Workout Log Plan for Cycle #" + Model.Cycle.CycleId;
}

@model WorkoutPlanLogForm

<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-10">
    <table class="table table-sm">
      @for (var w = 0; w < Model.Routine.Weeks; w++)
      {
        for (var d = 0; d < Model.Routine.Days; d++)
        {
          <thead>
            <tr>
              <th style="width: 250px">Cycle @Model.Cycle.CycleId, Week @(w + 1), Day @(d + 1)</th>
              <th>
                @if (Model.GetLogsFor(w + 1, d + 1).Any(x => x.Status != StatusTypes.Complete))
                {
                  <a href="@Url.Action(MVC.WorkoutLogs.Plans(Model.Cycle.Plan.PlanId, Model.Cycle.CycleId, w+1, d+1))"
                     class="d-print-none btn btn-sm btn-outline-success float-right">
                    <i class="fa fa-fw fa-plus"></i> Log It
                  </a>
                }
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var log in Model.GetLogsFor(w + 1, d + 1))
            {
              <tr>
                <td style="padding-left: 32px;">@log.Exercise.ExerciseName</td>
                <td style="font-size: 1.1em; font-family: 'Courier New', Courier, monospace">@log.WorkoutPlan</td>
              </tr>
            }
          </tbody>
        }
      }
    </table>
  </div>
</div>

