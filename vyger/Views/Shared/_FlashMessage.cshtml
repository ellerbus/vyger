@{
  FlashMessageCollection messages = null;

  if (TempData.ContainsKey("FlashMessage"))
  {
    messages = (FlashMessageCollection)TempData["FlashMessage"];
  }
}
@if (messages != null && messages.Count > 0)
{
  foreach (var message in messages)
  {
    <div class="col-lg-12 col-md-12 flash-message alert alert-@(message.Type.ToString().ToLower()) alert-dismissible" role="alert">
      <button type="button" class="close"
              data-dismiss="alert" aria-label="Close">
        <i class="fas fa-fw fa-times-circle"></i>
      </button>
      @message.Message
    </div>
  }
}
