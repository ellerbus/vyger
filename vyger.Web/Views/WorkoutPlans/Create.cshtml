@{
  ViewBag.Title = "Create Plan";
}

@model WorkoutPlanForm

<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()
      <div class="form-group">
        @Html.DropDownListFor(m => m.RoutineId, Model.Routines.ToSelectList(), "(routine)", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RoutineId, "", new { @class = "form-text text-danger" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">create</button>
        <a href="@Url.Action(MVC.WorkoutPlans.Index())" class="btn btn-outline-secondary">cancel</a>
      </div>
    }
  </div>
</div>

